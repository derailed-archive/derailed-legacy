---
import '@fontsource/inter/100.css'
import '@fontsource/inter/200.css'
import '@fontsource/inter/300.css'
import '@fontsource/inter/400.css'
import '@fontsource/inter/500.css'
import '@fontsource/inter/600.css'
import '@fontsource/inter/700.css'
import '@fontsource/inter/800.css'
import '@fontsource/inter/900.css'
import { Icon } from 'astro-icon'
import Header from '../components/header.astro';
import Feature from '../components/feature.astro';
import FeatureRight from '../components/feature_right.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Derailed - Open & Secure Communication</title>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://derailed.one/" />
		<meta property="og:site_name" content="Derailed" />
		<meta property="og:keywords" content="Free chat,Communications,Chat app,Derailed,Voice,Free voice,Chat,Discord alternatives,Open source chat,Open Communications, Free chat" />
		<meta property="og:description" content="The new open free voice & text communications platform for chat. Play games, talk to your friends, and hang out all in a safe and open environment." />
		<meta property="description" content="The new open free voice & text communications platform for chat. Play games, talk to your friends, and hang out all in a safe and open environment." />
	</head>
	<body>
		<div class="bg-[#2D2C30] pb-10 sm:px-2">
			<Header />
			<div>
				<div class="bg-texty rounded-3xl rounded-t-none font-header max-w-7xl m-auto">
					<div class="flex px-10 py-10">
						<div class="block pl-7">
							<h1 class="font-bold text-white text-7xl max-w-lg pt-20">
								Communication should be in
							</h1>
							<h1 class="font-bold text-transparent bg-clip-text bg-gradient-to-r mb-10 text-7xl max-w-xl text-gradient-to-r from-[#706fe3] to-[#e65fed] py-2">
								your control.
							</h1>
							<a class="mt-10 ml-5" href="/register">
								<button class="text-gray-200 font-semibold text-2xl rounded-xl border border-[#706fe3] bg-[#706fe3] transition duration-500 hover:bg-almost-dark-blue px-5 py-2">
									Try for free
								</button>
							</a>
						</div>
						<div class="w-80 max-lg:hidden mt-20 ml-56">
							<Icon name="mascot" />
						</div>
					</div>
				</div>
			</div>
			<div class="pt-36" />
			<FeatureRight fname="secure" header="Secure without loss." svg="home-secure" description="Don't lose your time worrying about security, or setting up mindless security games. Derailed provides it for you, completely for free." />
			<div class="pt-36" />
			<Feature fname="reliable" header="Reliability Unperturbed." svg="engine-line" description="Play games with your friends, have a mod meeting, or even hold a meeting with your pals about the next Genshin version. Never worry about downtimes, or rocky latency, we have you covered." />
			<div class="pt-36" />
			<FeatureRight fname="open-source" header="Open for the People." svg="source-repository-multiple" description="Derailed is completely open source to give benefit to people wanting to use their own specialized Derailed. You can easily open up your computer and host Derailed any time!" />
			<div class="pt-36" />
			<div>
				<div class="bg-texty rounded-3xl font-header max-w-7xl m-auto pb-20">
					<div class="flex px-10 py-10">
						<div class="block pl-10">
							<h1 class="font-bold text-right text-[#706fe3] text-7xl max-w-xl pt-20">
								What are you waiting for?
							</h1>
							<h3 class="font-normal text-right text-white text-xl max-w-lg pl-3 mt-10 pb-10">
								Derailed is completely free, and is out now! Don't be scared to try is just because it's new,
								give yourself a feel first.
							</h3>
							<a class="pl-40" href="/register">
								<button class="text-gray-200 font-semibold text-lg rounded-xl border border-[#706fe3] bg-[#706fe3] ml-10 transition duration-300 hover:bg-gradient-to-r from-[#706fe3] to-[#e65fed] px-5 py-2">
									Don't miss the new platform
								</button>
							</a>
						</div>
						<div class="w-80 max-lg:hidden mt-20 ml-32">
							<Icon name="mdi:open-source-initiative" style="color: #706fe3;" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
