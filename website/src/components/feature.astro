---
const {fname, header, description, svg} = Astro.props
import { Icon } from "astro-icon"
---

<div id={`feature-${fname}`}>
    <div class="bg-texty rounded-3xl font-header pb-20 max-w-7xl m-auto">
        <div class="flex px-10 py-10">
            <div class="block pl-10">
                <h1 class="font-bold text-right text-[#706FE3] text-7xl max-w-xl pt-20">
                    {header}
                </h1>
                <h3 class="font-normal text-right text-white text-xl max-w-lg pl-3 mt-10 m-auto">
                    {description}
                </h3>
            </div>
            <div class="w-80 max-lg:hidden mt-20 ml-32">
                <Icon name={svg} />
            </div>
        </div>
    </div>
</div>
